#!/bin/sh
#
# Re-rebase! Pull down the latest changes from a target branch and rebase your
# branch on top.
#
# USAGE
#     $ git rerebase <branch>
#

die() {
	echo $1 >&2
	exit 1
}

target_branch=$1
test -z $target_branch && die "ERROR: Specify a target branch to rebase on top of."

current_branch=$(git symbolic-ref --short -q HEAD) || die "ERROR: Not in a Git repository.  Navigate to a Git repository and try again."

git fetch origin $target_branch || die "ERROR: The target branch could not be fetched.  Check spelling/etc and try again."
git checkout $target_branch || die "ERROR: The target branch does not exist."
git merge --ff-only
git checkout $current_branch
git rebase $target_branch
